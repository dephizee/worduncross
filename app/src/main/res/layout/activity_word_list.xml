<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_word_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="pro.wordsuncross.WordList">
        <TextView
            android:id="@+id/ex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="#fff"
            />
        <LinearLayout
            android:layout_below="@id/ex"
            android:id="@+id/search_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            >
            <EditText
                android:id="@+id/entered_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="text"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:hint="@string/search_hint"
                />
            <Button
                android:id="@+id/m_search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/search_button"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@id/search_bar_layout"
            android:id="@+id/option_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:background="@color/colorPrimary"
            >
            <EditText
                android:id="@+id/filter_option_chars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="char(s)"
                android:inputType="text"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:textStyle="bold"
                />
            <Spinner
                android:id="@+id/filter_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="#fff"
                android:textColor="#fff"
                />
            <Button
                android:id="@+id/filter_option_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="filter"
                android:onClick="filterResult"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Size"
                android:textStyle="bold"
                android:textColor="#fff"
                />
            <Spinner
                android:id="@+id/option_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="#fff"
                android:textColor="#fff"

                />
        </LinearLayout>
        <ListView
            android:layout_below="@id/option_bar"
            android:id="@+id/mlist_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contextClickable="true"
            android:divider="@color/colorPrimary"
            android:dividerHeight="2dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >
        </ListView>
        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/loading"
            android:progress="80"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />



</RelativeLayout>
